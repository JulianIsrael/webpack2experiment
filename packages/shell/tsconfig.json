        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es5",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2017.object"
        ]
    },
    "include": [
        "./src/**/*"
    ]
